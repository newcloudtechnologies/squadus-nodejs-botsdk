{
    "compilerOptions": {
        "allowJs": true,
        "emitDeclarationOnly": false,
        "declaration": true,
        "esModuleInterop": true,
        "module": "commonjs",
        "moduleResolution": "node",
        "outDir": "dist",
        "sourceMap": true,
        "strict": true,
        "target": "es2021",
        "types": ["node", "jest"]
    },
    "lib": ["es2015"],
    "include": ["src/**/*"],
    "exclude": ["node_modules", "dist", "examples", "coverage"]
}
